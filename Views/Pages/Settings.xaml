<Page x:Class="WpfApp1.Views.Pages.Settings"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="clr-namespace:WpfApp1.Views.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      SizeChanged="Page_SizeChanged"
      Title="Settings">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#0F2027" Offset="0.275"/>
                <GradientStop Color="#203A43" Offset="0.638"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <!-- Row 1 -->
        <Border Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Label Content="الإعدادات"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   FontFamily="Arabic Typesetting"
                   FontSize="50"
                   Foreground="#FF42DA67"
                   FontWeight="ExtraBold"/>
        </Border>
        <Border Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <!-- Label -->
                <Border Grid.Column="2"
                        CornerRadius="5"
                        BorderBrush="Orange"
                        BorderThickness="2"
                        Background="Yellow"
                        HorizontalAlignment = "Left"
                        VerticalAlignment   = "Center"
                        Height              = "{Binding ButtonHeight}"
                        Width               = "{Binding TextBoxWidth}"
                        Margin="{Binding ItemMargin}">
                    <Label Content="أختر ملف العمل"
                           Foreground="Black"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           FontFamily="Arabic Typesetting"
                           FontSize="25"
                           FontWeight="ExtraBold"
                           />
                </Border>
                <!-- TextBox -->
                <Border BorderBrush="Black"
                        Grid.Column="1"
                        CornerRadius="5"
                        Background="White"
                        BorderThickness="2"
                        Margin="{Binding ItemMargin}"
                        Width="{Binding TextBoxWidth}"
                        Height="{Binding TextBoxHeight}"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        >
                    <TextBox Text="{Binding FolderPath}"
                            Background="Transparent"
                            TextDecorations="None"
                            FontSize="18"
                            FontWeight="Bold"
                            TextAlignment="Center"
                            IsReadOnly="True"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch"/>
                </Border>
                <Border 
                Grid.Column="0"
                CornerRadius="5"
                Background="Orange"
                Margin="{Binding ItemMargin}"
                Width="{Binding ButtonWidth}"
                Height="{Binding ButtonHeight}"
                BorderBrush="Yellow"
                VerticalAlignment="Center"
                HorizontalAlignment="Right"
                BorderThickness="2"
                >
                    <Button Content="اختر ملف"
                FontFamily="Arabic Typesetting"
                FontSize="20"
                FontWeight="Bold"
                Background="Transparent"
                BorderThickness="0"
                Click="PathButton_Click"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"/>
                </Border>
            </Grid>
        </Border>

        <!-- Row 2 -->
        <Border Grid.Row="2"
                VerticalAlignment="Stretch"
                HorizontalAlignment="Stretch">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <!-- Label -->
                <Border Grid.Column="2"
            CornerRadius="5"
            BorderBrush="Orange"
            BorderThickness="2"
            Background="Yellow"
            HorizontalAlignment = "Left"
            VerticalAlignment   = "Center"
            Height              = "{Binding ButtonHeight}"
            Width               = "{Binding TextBoxWidth}"
            Margin="{Binding ItemMargin}">
                    <Label Content="حدد ساعة التنبيه"
               Foreground="Black"
               HorizontalAlignment="Center"
               VerticalAlignment="Center"
               FontFamily="Arabic Typesetting"
               FontSize="25"
               FontWeight="ExtraBold"
               />
                </Border>
                <!-- TextBox -->
                <Border BorderBrush="Black"
            Grid.Column="1"
            CornerRadius="5"
            Background="White"
            BorderThickness="2"
            Margin="{Binding ItemMargin}"
            Width="{Binding TextBoxWidth}"
            Height="{Binding TextBoxHeight}"
            VerticalAlignment="Center"
            HorizontalAlignment="Center"
            >
                    <ComboBox  x:Name="HourList" ItemsSource="{Binding Source={StaticResource AppSettings}, Path=HourOptions}"
            SelectedItem="{Binding SelectedHour}"
            HorizontalContentAlignment="Center" 
            VerticalContentAlignment="Center"
            FontFamily="Segoe UI"
            FontSize="16"
            FontWeight="Bold"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"/>
                </Border>
            </Grid>
        </Border>
        <!-- Row 3 -->
        <Border Grid.Row="3"
                VerticalAlignment="Stretch"
                HorizontalAlignment="Stretch">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <!-- Label -->
                <Border Grid.Column="2"
            CornerRadius="5"
            BorderBrush="Yellow"
            BorderThickness="2"
            Background="Orange"
            HorizontalAlignment = "Right"
            VerticalAlignment   = "Center"
            Height              = "{Binding ButtonHeight}"
            Width               = "{Binding ButtonWidth}"
            Margin="{Binding ItemMargin}">
                    <Button Content="حفظ"
FontFamily="Arabic Typesetting"
FontSize="20"
FontWeight="Bold"
Background="Transparent"
BorderThickness="0"
Click="SaveButton_Click"
HorizontalAlignment="Stretch"
VerticalAlignment="Stretch"/>
                </Border>

                <Border 
    Grid.Column="0"
    CornerRadius="5"
    Background="Orange"
    Margin="{Binding ItemMargin}"
    Width="{Binding ButtonWidth}"
    Height="{Binding ButtonHeight}"
    BorderBrush="Yellow"
    VerticalAlignment="Center"
    HorizontalAlignment="left"
    BorderThickness="2"
    >
                    <Button Content="رجوع"
    FontFamily="Arabic Typesetting"
    FontSize="20"
    FontWeight="Bold"
    Background="Transparent"
    BorderThickness="0"
    Click="BackButton_Click"
    HorizontalAlignment="Stretch"
    VerticalAlignment="Stretch"/>
                </Border>
            </Grid>
        </Border>
    </Grid>
</Page>
